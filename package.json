{
  "name": "node_project",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build:client": "pnpm -C ./client build",
    "start": "node server.js",
    "dev:server": "nodemon server.js",
    "dev:client": "pnpm -C ./client dev",
    "prestart": "pnpm build:client",
    "predev": "pnpm i",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "bypass:dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "i:server": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "i:client": "rm -rf ./client/node_modules ./client/pnpm-lock.yaml && pnpm install -C ./client",
    "i": "pnpm i:server && pnpm i:client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "concurrently": "^9.1.2",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "serverless-http": "^3.2.0",
    "uploadthing": "^7.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
